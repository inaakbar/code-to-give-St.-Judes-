    });


    async function getrequestForms() {
      return await db.collection('requestform').get({ keys: true });
    };


    async function uploadrequestForm() {
      var forms = await getrequestForms();
      forms.forEach(async form => {
       var f=JSON.parse(JSON.stringify(form));
        if (!f.saved) {
          console.log("uploading form", form);
         
          var data = new FormData();

          var response = await fetch('/mainform', {
            method: 'POST',
            headers: {
              'Accept': 'application/json',
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(form.data)
          })//.then(Response => {
          console.log('form saved', response);
          form.saved = true;
          await updateForm(form);

          // }
          // )
        }
        console.log(form);
      });

    }

    async function updateForm(form) {
      await db.collection('requestform').doc(form.key).update({
        saved: true,
        uts: new Date()
      });
    };

    let db = new Localbase('db');

    function saveformdetails() {
      var requestForm = document.getElementById('requestForm');
      var form = new FormData(requestForm);
      db.collection('requestform').add({
        data: Object.fromEntries(form.entries()),
        saved: false,
        ts: new Date(),
        uts: undefined
      }).then(() => {
        uploadrequestForm().then(() => {
          setTimeout(() => {
            window.location.href = "/userdash";
          }, 2000);

        })
      })

    }



  </script>
