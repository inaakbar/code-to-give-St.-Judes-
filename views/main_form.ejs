    <h3 class="formHeading">Request Form</h3>
    <form class="form-floating row g-3 userForm" id="requestForm">
      <div class="form-floating mb-3 col">
        <input type="text" value="" class="form-control" placeholder="name@example.com" name="uid" id="UID"
