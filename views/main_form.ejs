      </select>

      <select class="form-select" name="needcategory" aria-label="Default select example" id="subCategory">
        <option selected>Select the sub-category of need</option>
        <option value="Education">Education</option>
        <option value="Health">Health</option>
        <option value="Livelihood">Livelihood</option>
        <option value="Life skills">Life skills</option>
        <option value="Eduation Counselling">Eduation Counselling</option>
        <option value="Medical Counselling">Medical Counselling</option>
      </select>

      <div class="form-floating mb-3 col" id="amountNeededDiv">
        <input type="number" class="form-control" id="amountNeeded" name="amountNeeded" placeholder="name@example.com">
        <label for="amountNeeded">Amount Needed</label>
      </div>

      <div class="userFormDiv row" id="educationForm">
        <h3>Education Form Fields</h3>
        <div class="form-floating mb-3 col">
          <input type="number" class="form-control" placeholder="name@example.com" name="Percentage" id="score">
          <label for="score">Percentage of last academic year</label>
        </div>

        <div class="form-floating mb-3 col">
          <input type="number" name="Attendance" class="form-control" id="attendance" name="text"
            placeholder="name@example.com">
          <label for="attendance">Attendance record (in Percentage)</label>
        </div>
        <div class="form-floating mb-3 col">
          <input type="number" name="Dropoutyears" class="form-control" id="dropout" placeholder="name@example.com">
          <label for="dropout">Dropout years</label>
        </div>

        <div class="genderCheckbox AffiliatedInstitute row">
          <div class="col-6"><span>Affiliated to any other Institute</span></div>
          <div class="form-check col-3">
            <input class="form-check-input" type="radio" name="institute" id="Yes" value="yes">
            <label class="form-check-label" for="Yes">
              Yes
            </label>
          </div>
          <div class="form-check col-3">
            <input class="form-check-input" type="radio" name="institute" id="No" value="no">
            <label class="form-check-label" for="No">
              No
            </label>
          </div>
        </div>
        <div class="form-floating mb-3 col">
          <input type="text" class="form-control" id="institute" name="institute" placeholder="1234 Main St">
          <label for="institute">Name of Institute</label>
        </div>
        <div class="form-floating mb-3 col">
          <input type="text" class="form-control" id="DurationAffiliation" name="DurationAffiliation"
            placeholder="1234 Main St">
          <label for="DurationAffiliation">Duration of affiliation</label>
        </div>
      </div>

      <div class="userFormDiv row" id="healthForm">
        <h3>Health Form Fields</h3>
        <div class="form-floating mb-3 col">
          <input type="text" class="form-control" placeholder="name@example.com" name="Hospitalname" id="hospital">
          <label for="hospital">Hospital Name</label>
        </div>

        <div class="form-floating mb-3 col">
          <input type="text" class="form-control" id="medicalAilment" name="Medicalailment"
            placeholder="name@example.com">
          <label for="medicalAilment">Medical Ailment</label>
        </div>
        <div class="form-floating mb-3 col">
          <div>Duration of Treatment</div>
          <select class="form-select" name="Durationoftreatment" aria-label="Default select example">
            <option selected>Select duration of treatment</option>
            <option value="6 months">&lt;6 months</option>
            <option value="1to3 years">1-3 years</option>
            <option value="3 years">&gt;3 years</option>
          </select>
        </div>
        <div class="form-floating mb-3 col">
          <div>Reason</div>
          <select class="form-select" name="Reason" aria-label="Default select example">
            <option selected>Select type of reason</option>
            <option value="treatment">Treatment</option>
            <option value="medicine">Medicine</option>
            <option value="both">Both</option>
